<!--main layout to link to java code-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!--
        scrollView
        
        to allow the view to be scrolled up and down.
    -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <!--
            mainLinearLayout
            used to keep padding between main headings
        -->
        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--
                layoutGeneralAll

                the layout that contains all the general items, this includes heading etc

                contains a text view and image that make up the heading.
            -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutGeneralAll">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="General Incident Details"
                    android:id="@+id/headingGeneral"
                    android:textSize="@dimen/mainHeadingSize" />

                <ImageView
                    android:layout_width="@dimen/mainHeadingSize"
                    android:layout_height="@dimen/mainHeadingSize"
                    android:id="@+id/imageView"
                    android:background="@android:drawable/arrow_down_float"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true" />

                <!-- 
                    layoutGeneralShrinkable

                    this layout is the part that gets shrunk.

                    It usually contains a linear layout to further arrange internals

                -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layoutGeneralShrinkable"
                    android:layout_below="@+id/headingGeneral"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="false"
                    android:paddingLeft="@dimen/abc_action_bar_content_inset_material">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <!--
                            The following is the setup for each line within the shrinkable view.
                        -->

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Incident #: "
                                android:id="@+id/txtViewInNum"
                                android:textSize="@dimen/labelSize" />

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/inNum"
                                android:layout_toRightOf="@+id/txtViewInNum"
                                android:layout_toEndOf="@+id/textView"
                                android:background="@android:color/background_light"
                                android:textSize="@dimen/labelSize"
                                android:layout_alignBottom="@+id/txtViewInNum" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Date:"
                                android:id="@+id/textView"
                                android:textSize="@dimen/labelSize"
                                android:layout_alignParentStart="false" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="date"
                                android:ems="10"
                                android:id="@+id/editText" />

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
